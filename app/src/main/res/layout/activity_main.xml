<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/operation"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeOper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeOper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/operation" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="205dp"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:gravity="center"
        android:text="AC"
        android:textColor="#f29f10"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result" />

    <Button
        android:id="@+id/btnDel"
        android:layout_width="205dp"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:gravity="center"
        android:text="BS"
        android:textColor="#f29f10"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnC"
        app:layout_constraintTop_toTopOf="@id/btnC" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="@dimen/withButtons"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:text="7"
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnC" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="@dimen/withButtons"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:text="8"
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toTopOf="@id/btn7" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="@dimen/withButtons"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:text="9"
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintTop_toTopOf="@id/btn8" />

    <Button
        android:id="@+id/btnDivision"
        android:layout_width="@dimen/withButtons"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:text="/"
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toTopOf="@id/btn9" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="@dimen/withButtons"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:text="4"
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/btn7"
        app:layout_constraintTop_toBottomOf="@id/btn7" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="@dimen/withButtons"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:text="5"
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn4"
        app:layout_constraintTop_toTopOf="@id/btn4" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="@dimen/withButtons"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:text="6"
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn5"
        app:layout_constraintTop_toTopOf="@id/btn5" />

    <Button
        android:id="@+id/btnMulti"
        android:layout_width="@dimen/withButtons"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:text="*"
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn6"
        app:layout_constraintTop_toTopOf="@id/btn6" />


    <Button
        android:id="@+id/btn1"
        android:layout_width="@dimen/withButtons"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@id/btn4" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="@dimen/withButtons"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:text="2"
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintTop_toTopOf="@id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="@dimen/withButtons"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:text="3"
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn2"
        app:layout_constraintTop_toTopOf="@id/btn2" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="@dimen/withButtons"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:text="-"
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn3"
        app:layout_constraintTop_toTopOf="@id/btn3" />


    <Button
        android:id="@+id/btnPoint"
        android:layout_width="@dimen/withButtons"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:text="."
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/btn1"
        app:layout_constraintTop_toBottomOf="@id/btn1" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="@dimen/withButtons"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btnPoint"
        app:layout_constraintTop_toTopOf="@id/btnPoint" />

    <Button
        android:id="@+id/btnEqually"
        android:layout_width="@dimen/withButtons"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:text="="
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn0"
        app:layout_constraintTop_toTopOf="@id/btn0" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="@dimen/withButtons"
        android:layout_height="80dp"
        android:backgroundTint="#00000000"
        android:text="+"
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeNumb"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btnEqually"
        app:layout_constraintTop_toTopOf="@id/btnEqually" />


</androidx.constraintlayout.widget.ConstraintLayout>